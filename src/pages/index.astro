---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
            <div class="posts">
                {
                    getReleasedPosts().map((post) => (
                        <BlogInfo post={post} />
                    ))
                }
            </div>
		</main>
	</body>
</html>
